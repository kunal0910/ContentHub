<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightBlue"/>

            <corners android:bottomLeftRadius="@dimen/radio_button_corner_radius"
                android:bottomRightRadius="@dimen/radio_button_corner_radius"
                android:topLeftRadius="@dimen/radio_button_corner_radius"
                android:topRightRadius="@dimen/radio_button_corner_radius"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="1dp"
                android:color="@color/grey"/>

            <corners android:bottomLeftRadius="@dimen/radio_button_corner_radius"
                android:bottomRightRadius="@dimen/radio_button_corner_radius"
                android:topLeftRadius="@dimen/radio_button_corner_radius"
                android:topRightRadius="@dimen/radio_button_corner_radius"/>
        </shape>
    </item>
</selector>